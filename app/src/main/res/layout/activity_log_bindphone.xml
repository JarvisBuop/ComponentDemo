        <com.ostak.justplayteacher.ui.view.CustomLogView
            android:id="@+id/edit_input_psd_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_nor"
            app:editFocus="true"
            app:editHint="@string/edit_input_phone_again"
            app:inputType="text"
            app:input_mode="text"
            app:left_icon="@mipmap/icon_phone" />

        <!--<RelativeLayout-->
            <!--android:layout_width="wrap_content"-->
