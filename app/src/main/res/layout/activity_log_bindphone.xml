                <!--android:layout_centerVertical="true"-->
                <!--android:text="@string/txt_get_code"-->
                <!--android:textColor="@color/color_main" />-->
        <!--</RelativeLayout>-->

        <com.ostak.justplayteacher.ui.view.CustomLogView
            android:id="@+id/edit_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_nor"
            app:editFocus="true"
            app:editHint="@string/edit_input_code_again"
            app:inputType="text"
            app:input_mode="text"
            app:right_txt_color="@color/color_main"
            app:right_txt="@string/txt_get_code"
            app:left_icon="@mipmap/icon_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_nor_20dp"
            android:layout_marginTop="@dimen/margin_nor"
            android:text="@string/txt_bind_phone_tips"
            android:textColor="@color/color_main"
            android:textSize="@dimen/font_size_small" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_nor_30dp">

            <Button
                android:id="@+id/txt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_big_btn"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:minWidth="300dp"
                android:text="@string/txt_submit"
                android:textColor="@color/color_main"
                android:textSize="@dimen/font_size_bigger" />

            <TextView
                style="@style/text_nor_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_submit"
                android:layout_toRightOf="@+id/txt_submit"
                android:textSize="@dimen/font_size_normal"
                android:text="@string/txt_skip"
                android:layout_marginLeft="@dimen/font_size_title_50dp"
                android:textColor="@color/color_main" />
        </RelativeLayout>

    </LinearLayout>
