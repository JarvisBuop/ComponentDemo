<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_nav_bar"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_nor_15"
        android:padding="@dimen/margin_nor_20dp"
        android:src="@mipmap/icon_back_green" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/margin_nor_20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_size_26sp"
        tools:text="标题" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_nor_15"
        android:padding="@dimen/margin_nor_20dp"
        android:src="@mipmap/icon_close" />
</LinearLayout>
