<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="500dp"
    android:minHeight="350dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_rect_white"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/bg_techer">

    <TextView
        style="@style/text_nor_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_course_time"
        android:layout_marginTop="@dimen/margin_nor_30dp"
        android:drawablePadding="@dimen/drawpadding"
        android:text="@string/makesure_star"
        android:textColor="@color/text_nor"
        android:textSize="@dimen/dimen_size_20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_nor_20dp"
        android:layout_marginTop="@dimen/margin_nor_20dp"
        android:src="@mipmap/icon_star" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_nor">

        <Button
            android:id="@+id/btn_yes"
            style="@style/btn_log_min_green"
            android:layout_marginLeft="@dimen/margin_nor_40dp"
            android:layout_marginRight="@dimen/margin_nor_20dp"
            android:text="是" />

        <Button
            android:id="@+id/btn_no"
            style="@style/btn_log_min_red"
            android:layout_marginLeft="@dimen/margin_nor_20dp"
            android:layout_marginRight="@dimen/margin_nor_40dp"
            android:text="否" />
    </LinearLayout>
</LinearLayout>
