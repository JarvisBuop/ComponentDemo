<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_span"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_nor"
    android:background="@drawable/bg_rect_white_nopadding"
    android:gravity="center"
    android:minWidth="200dp"
    android:paddingLeft="@dimen/padding_nor"
    android:paddingRight="@dimen/padding_nor">

    <TextView
        android:id="@+id/txt_span"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="left"
        android:textColor="@color/text_nor"
        android:textSize="@dimen/dimen_size_20sp"
        tools:text="2000" />

    <ImageView
        android:id="@+id/img_span"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/gray_small_down_arrow" />
</LinearLayout>