<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="@dimen/img_course_size"
        android:layout_height="@dimen/img_course_size"
        android:src="@mipmap/wy_logo" />

    <TextView
        android:id="@+id/txt_course_name"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_nor_20dp"
        android:layout_marginTop="@dimen/margin_nor"
        android:layout_toRightOf="@id/img_show"
        android:drawablePadding="@dimen/drawpadding"
        android:textColor="@color/text_nor"
        android:textSize="@dimen/dimen_size_20sp"
        tools:text="AIM Song" />

    <TextView
        android:id="@+id/txt_public_level"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_course_name"
        android:layout_below="@id/txt_course_name"
        android:layout_marginTop="@dimen/margin_nor"
        android:textColor="@color/text_nor_gray"
        tools:text="适合 :中级" />

    <TextView
        android:id="@+id/txt_public_time"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_course_name"
        android:layout_below="@id/txt_public_level"
        android:layout_marginTop="@dimen/margin_nor"
        android:textColor="@color/text_nor_gray"
        tools:text="适合 :中级" />

    <TextView
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_course_name"
        android:layout_below="@id/txt_public_time"
        android:layout_marginTop="@dimen/margin_nor"
        android:textColor="@color/text_nor_gray"
        tools:text="适合 :中级" />

    <Button
        style="@style/btn_log_min_multi_color"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_show"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_nor"
        android:text="@string/txt_public_lesson_present" />
</RelativeLayout>
