<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main_padding_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="@dimen/img_coursetime_size"
            android:layout_height="@dimen/img_coursetime_size"
            android:src="@mipmap/wy_logo" />

        <TextView
            android:id="@+id/txt_course_name"
            style="@style/text_nor_style_nopadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor_20dp"
            android:layout_marginTop="@dimen/margin_nor"
            android:layout_toRightOf="@id/img_show"
            android:drawablePadding="@dimen/drawpadding"
            android:textColor="@color/text_nor"
            android:textSize="@dimen/dimen_size_20sp"
            tools:text="AIM Song" />

        <TextView
            android:id="@+id/txt_course_level"
            style="@style/text_nor_style_nopadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_course_name"
            android:layout_marginLeft="@dimen/margin_nor"
            android:layout_toRightOf="@id/txt_course_name"
            android:textColor="@color/color_main"
            android:textSize="@dimen/dimen_size_20sp"
            tools:text="大师级" />

        <TextView
            android:id="@+id/txt_course_count"
            style="@style/text_nor_style_nopadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_course_name"
            android:layout_below="@id/txt_course_name"
            android:layout_marginTop="@dimen/margin_nor_15"
            android:text="@string/txt_lesson_count"
            android:textColor="@color/text_nor_gray" />

        <TextView
            android:id="@+id/txt_course_country"
            style="@style/text_nor_style_nopadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_course_count"
            android:layout_marginLeft="@dimen/margin_nor"
            android:layout_toRightOf="@id/txt_course_count"
            android:textColor="@color/text_nor_gray"
            tools:text="34岁" />

    </RelativeLayout>

    <com.ostak.justplaystudent.ui.view.CustomLineVie
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:line_txt="@string/line_txt_content"></com.ostak.justplaystudent.ui.view.CustomLineVie>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_label"
            style="@style/text_nor_style_nopadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lesson_count_sel"
            android:textColor="@color/text_nor_gray" />

        <TextView
            style="@style/text_nor_style_nopadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor_15"
            android:layout_toRightOf="@id/txt_label"
            android:text="@string/txt_lesson_sale_sel"
            android:textColor="@color/color_main_red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_nor"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/img_max_width"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_checkbox_lesson"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/txt_time_10"
            android:textColor="@color/text_nor_gray"
            android:textSize="@dimen/dimen_size_35sp" />

        <CheckBox
            android:layout_width="@dimen/img_max_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor"
            android:background="@drawable/bg_checkbox_lesson"
            android:button="@null"
            android:gravity="center"
            android:text="@string/txt_time_20"
            android:textColor="@color/text_nor_gray"
            android:textSize="@dimen/dimen_size_35sp" />

        <CheckBox
            android:layout_width="@dimen/img_max_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor"
            android:background="@drawable/bg_checkbox_lesson"
            android:button="@null"
            android:gravity="center"
            android:text="@string/txt_time_30"
            android:textColor="@color/text_nor_gray"
            android:textSize="@dimen/dimen_size_35sp" />
    </LinearLayout>

    <TextView
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_nor"
        android:text="@string/txt_lesson_sale_middle"
        android:textColor="@color/color_main_red" />

    <com.ostak.justplaystudent.ui.view.CustomLineVie
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_nor_15"
        app:line_txt="@string/line_txt_pay" />

    <LinearLayout
        android:id="@+id/layout_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_checkbox_lesson_pay"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor"
            android:background="@drawable/bg_checkbox_lesson_pay2"
            android:button="@null"
            android:gravity="center" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nor"
            android:background="@drawable/bg_checkbox_lesson_pay3"
            android:button="@null"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_nor_15"
        android:background="@mipmap/alert_confirm_bt_normal"
        android:gravity="center"
        android:text="总价"
        android:textColor="@color/color_main_red"
        android:textSize="@dimen/dimen_size_18sp" />

    <View
        style="@style/horizontal_line"
        android:layout_marginBottom="@dimen/margin_nor_15"
        android:layout_marginTop="@dimen/margin_nor_15" />

    <Button
        style="@style/btn_log_min_multi_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_submit_order"
        android:textColor="@color/color_main" />

</LinearLayout>
