<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_nor"
    android:layout_height="wrap_content"
    tools:showIn="@layout/frag_purchase_lessontime">

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="@dimen/img_coursetime_size"
        android:layout_height="@dimen/img_coursetime_size"
        android:src="@mipmap/wy_logo" />

    <TextView
        android:id="@+id/txt_course_name"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_nor_20dp"
        android:layout_marginTop="@dimen/margin_nor"
        android:layout_toRightOf="@id/img_show"
        android:drawablePadding="@dimen/drawpadding"
        android:textColor="@color/text_nor"
        android:textSize="@dimen/dimen_size_20sp"
        tools:text="AIM Song" />

    <TextView
        android:id="@+id/txt_course_level"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_course_name"
        android:layout_marginLeft="@dimen/margin_nor"
        android:layout_toRightOf="@id/txt_course_name"
        android:textColor="@color/color_main"
        android:textSize="@dimen/dimen_size_20sp"
        tools:text="大师级" />

    <TextView
        android:id="@+id/txt_pratice_count_label"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_course_name"
        android:layout_below="@id/txt_course_name"
        android:layout_marginTop="@dimen/margin_nor_15"
        android:text="@string/pratice_count"
        android:textColor="@color/text_nor_gray" />

    <TextView
        android:id="@+id/txt_pratice_count_content"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_pratice_count_label"
        android:layout_marginLeft="@dimen/margin_nor"
        android:layout_toRightOf="@id/txt_pratice_count_label"
        android:textColor="@color/text_nor_gray"
        tools:text="34岁" />

    <TextView
        android:id="@+id/txt_pratice_count_label2"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_course_name"
        android:layout_below="@id/txt_pratice_count_label"
        android:layout_marginTop="@dimen/margin_nor_15"
        android:text="@string/pratice_count"
        android:textColor="@color/text_nor_gray" />

    <TextView
        android:id="@+id/txt_course_country"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_pratice_count_label2"
        android:layout_marginLeft="@dimen/margin_nor"
        android:layout_toRightOf="@id/txt_pratice_count_label2"
        android:textColor="@color/text_nor_gray"
        tools:text="34岁" />

</RelativeLayout>