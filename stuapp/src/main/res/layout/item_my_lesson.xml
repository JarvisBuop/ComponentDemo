<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/check_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_lesson_time"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_show"
        android:layout_toRightOf="@id/check_lesson"
        android:drawableLeft="@mipmap/my_course"
        android:text="初级课程2018/02/10"
        android:textColor="@color/text_nor_gray" />

    <TextView
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_lesson_time"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/m_tearch"
        android:text="预约老师:MIKE"
        android:textColor="@color/text_nor_gray" />

    <TextView
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_show"
        android:layout_alignLeft="@id/txt_lesson_time"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@mipmap/m_info"
        android:text="10课时"
        android:textColor="@color/text_nor_gray" />

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="@dimen/img_coursetime_size"
        android:layout_height="@dimen/img_coursetime_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_nor"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/m_normal_info" />

    <View
        style="@style/horizontal_line_px"
        android:layout_alignParentBottom="true" />

    <View
        style="@style/vertical_line"
        android:layout_alignParentRight="true" />
</RelativeLayout>
