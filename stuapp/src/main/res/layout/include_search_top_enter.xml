<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/navbar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_left_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_nor_15"
        android:src="@mipmap/icon_back2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_left_back"
        android:layout_weight="1"
        android:padding="@dimen/margin_nor_20dp"
        android:textColor="@color/text_nor"
        android:textSize="@dimen/dimen_size_26sp"
        tools:text="我的订单" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_title_content"
        android:src="@mipmap/navbar_line" />


    <TextView
        android:id="@+id/txt_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_nor_15"
        android:layout_marginRight="@dimen/margin_nor_15"
        android:layout_toLeftOf="@+id/ling_right2"
        android:padding="@dimen/margin_nor_20dp"
        android:textColor="@color/text_nor_gray"
        android:textSize="@dimen/dimen_size_26sp"
        tools:text="老师来了 10:00" />

    <ImageView
        android:id="@+id/ling_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_title_right"
        android:src="@mipmap/navbar_line" />

    <TextView
        android:id="@+id/txt_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/drawpadding"
        android:drawableRight="@mipmap/nav_right_arrow"
        android:padding="@dimen/margin_nor_20dp"
        android:text="@string/txt_enter"
        android:textColor="@color/color_main"
        android:textSize="@dimen/dimen_size_26sp" />
</RelativeLayout>
