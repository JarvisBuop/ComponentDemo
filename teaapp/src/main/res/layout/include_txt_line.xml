<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_nor"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_line"
        style="@style/text_nor_style_nopadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_nor"
        android:paddingBottom="@dimen/padding_nor"
        android:paddingTop="@dimen/padding_nor"
        android:textColor="@color/color_grey_888888"
        tools:text="选择上课时间" />

    <View
        style="@style/horizontal_line"
        android:background="@color/color_grey_888888" />
</LinearLayout>